/* Дополнительные стили для QSplitter, если нужно */
QSplitter::handle {
    background-color: #8FBC8F; /* Цвет разделителя */
    /* image: url(my-splitter-handle-image.png); */ /* Можно задать иконку */
}
QSplitter::handle:horizontal {
    width: 5px;
}
QSplitter::handle:vertical {
    height: 5px;
}
QSplitter::handle:pressed {
    background-color: #70a870; /* Цвет при нажатии */
}

/* Стили для ScrollBar, если нужно кастомизировать */
QScrollBar:vertical {
    border: 1px solid #a9d1a9;
    background: #f0fff0;
    width: 15px;
    margin: 15px 0 15px 0;
}
QScrollBar::handle:vertical {
    background: #C8E6C9;
    min-height: 20px;
    border-radius: 7px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: 1px solid #a9d1a9;
    background: #e0eee0;
    height: 14px;
    subcontrol-origin: margin;
}
QScrollBar::add-line:vertical {
    subcontrol-position: bottom;
}
QScrollBar::sub-line:vertical {
    subcontrol-position: top;
}
QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
    border: 2px solid #a9d1a9;
    width: 3px;
    height: 3px;
    background: #005000;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    border: 1px solid #a9d1a9;
    background: #f0fff0;
    height: 15px;
    margin: 0 15px 0 15px;
}
QScrollBar::handle:horizontal {
    background: #C8E6C9;
    min-width: 20px;
    border-radius: 7px;
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: 1px solid #a9d1a9;
    background: #e0eee0;
    width: 14px;
    subcontrol-origin: margin;
}
QScrollBar::add-line:horizontal {
    subcontrol-position: right;
}
QScrollBar::sub-line:horizontal {
    subcontrol-position: left;
}
QScrollBar::left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
     border: 2px solid #a9d1a9;
    width: 3px;
    height: 3px;
    background: #005000;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}